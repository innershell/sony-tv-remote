{
  "name": "Sony TV Web Remote",
  "short_name": "Sony TV",
  "start_url": ".",
  "display": "standalone",
  "background_color": "#000",
  "description": "Send commands to a Sony Bravia TV from a web page.",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": [{
    "src": "images/120.png",
    "sizes": "120x120",
    "type": "image/png"
  }, {
    "src": "images/128.png",
    "sizes": "128x128",
    "type": "image/png"
  }, {
    "src": "images/256.png",
    "sizes": "256x256",
    "type": "image/png"
  }, {
    "src": "images/512.png",
    "sizes": "512x512",
    "type": "image/png"
  }],
  "browser_action": {
    "default_icon": "images/tv-icon-128.png"
  },

  "permissions": ["http://*/*", "storage", "contextMenus"]
}
